<h1>All Wikis</h1>

<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h5 class="media-heading">
        <p><%= link_to wiki.title, wiki_path(wiki) %><br> | <small>Wiki Owner: <%= wiki.user.email %></small>
        <% if wiki.private? %>
          <strong>PRIVATE</strong></p>
        <% end %>
      </h5>
    </div>
  </div>
<% end %>
<%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
